<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="hidden" />
        <field name="template" type="combo" label="COM_HNAUTH_CREDENTIAL_TEMPLATE" description="COM_HNAUTH_CREDENTIAL_TEMPLATE_DESC" class="combobox" required="true">
            <option value="moodle">COM_HNAUTH_CREDENTIAL_TEMPLATE_MOODLE</option>
        </field>
        <field name="usergroupid" type="usergroup" label="COM_HNAUTH_CREDENTIAL_USERGROUP" description="COM_HNAUTH_CREDENTIAL_USERGROUP_DESC" multiple="false" />
        <field name="authname" type="text" label="COM_HNAUTH_CREDENTIAL_AUTHNAME" description="COM_HNAUTH_CREDENTIAL_AUTHNAME_DESC" size="25" maxlength="25" class="inputbox" required="true" default="" />
        <field name="title" type="text" label="COM_HNAUTH_CREDENTIAL_TITLE" description="COM_HNAUTH_CREDENTIAL_TITLE_DESC" size="100" class="inputbox" required="true" default="" />
        <field name="uri" type="url" label="COM_HNAUTH_CREDENTIAL_URI" description="COM_HNAUTH_CREDENTIAL_URI_DESC" class="inputbox" required="true" default="" />
        <field name="publickey" type="text" label="COM_HNAUTH_CREDENTIAL_PUBLICKEY" description="COM_HNAUTH_CREDENTIAL_PUBLICKEY_DESC" class="inputbox" required="true" default="" />
        <field name="secretkey" type="text" label="COM_HNAUTH_CREDENTIAL_SECRETKEY" description="COM_HNAUTH_CREDENTIAL_SECRETKEY_DESC" class="inputbox" required="true" default="" />
        <field name="ttl" type="integer" default="30" label="COM_HNAUTH_CREDENTIAL_TTL" description="COM_HNAUTH_CREDENTIAL_TTL_DESC" first="5" last="60" step="5" />
        <field name="algorithm" type="combo" label="COM_HNAUTH_CREDENTIAL_ALGORITHM" description="COM_HNAUTH_CREDENTIAL_ALGORITHM_DESC" class="combobox" required="true">
            <option value="HS256">COM_HNAUTH_CREDENTIAL_ALGORITHM_HS256</option>
        </field>
        <field name="behaviors" type="textarea" label="COM_HNAUTH_CREDENTIAL_BEHAVIORS" description="COM_HNAUTH_CREDENTIAL_BEHAVIORS_DESC" class="inputbox" default="{}" />
        <field name="obs" type="textarea" label="COM_HNAUTH_CREDENTIAL_OBS" description="COM_HNAUTH_CREDENTIAL_OBS_DESC" class="inputbox" default="" />
    </fieldset>
</form>